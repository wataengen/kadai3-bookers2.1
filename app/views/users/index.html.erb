<!DOCTYPE html>
<html>
  <head>

  </head>
  <body>


      <p id="notice"></p>
     <div class="container px-5 mx-sm-0">
     <div class="row">
         
          <%= render 'userinfo', user: @user %>
          <%= render '/books/newbook', book: @book %>

    <main>
     <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-bover table-inverse">
          <thead>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
            <th colspan="3"></th>
          </thead>
          <tbody>

             <% @users.each do |user| %>
             <tr>
               <td></td>
               <td><%= link_to user.name, "/users/#{user.id}" %></td>
               <td><%= user.introduction %></td>
             </tr>
             <% end %>

             </tbody>
        </table>
       </div>
      </div>
     </div>
    </main>

  </body>

</html>
