<!DOCTYPE html>
<html>
  <head>

  </head>
  <body>


      <p id="notice"></p>
     <div class="container px-5 mx-sm-0">
     <div class="row">
         <h2>User info</h2>
         <table class="table">
          <tbody>

          </tbody>
         </table>

         <div class="row">
          <a class="btn btn-outline-secondary btn-block">
            <i class="fas fa-user-cog" aria-hidden="true"></i>
          </a>
          </div>
          <div class="row">
           <%= form_for(@book) do |f| %>
            <h2 class="mt-3">New book</h2>

             <div class="form-group">
               <label for="title">Title</label>
               <%= f.text_field :title, class: "form-control" %>
             </div>
             <div class="form-group">
               <label for="opinion">Opinion</label>
               <%= f.text_area :opinion, class: "form-control" %>
             </div>
             <div class="form-group">
               <%= f.submit :"Create Book", class: "btn btn-success" %>
             </div>
          <% end %>
          </div>

    <main>
     <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-bover table-inverse">
          <thead>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
            <th colspan="3"></th>
          </thead>
          <tbody>

             <% @users.each do |user| %>
             <tr>
               <td></td>
               <td><%= link_to user.name %></td>
               <td><%= user.introduction %></td>
             </tr>
             <% end %>

             </tbody>
        </table>
       </div>
      </div>
     </div>
    </main>

  </body>

</html>