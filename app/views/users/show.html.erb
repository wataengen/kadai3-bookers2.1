<!DOCTYPE html>
<html>
  <head>

  </head>
  <body>
      <main>


      <p id="notice"></p>
     <div class="container px-5 mx-sm-0">
     <div class="row">
        <div class="col-md-3">
         <h2>User info</h2>
         <table class="table">
          <tbody><tr></tr>
           <tr>
	         <th>name</th>
	         <th><%= @user.name %></th>
           </tr>
           <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
          </tr>


         </tbody>
        </table>

         <div class="row">
          <a class="btn btn-outline-secondary btn-block">
            <i class="fas fa-user-cog" aria-hidden="true"></i>
          </a>
          </div>


          <%= render '/books/newbook', book: @book %>
         </div>


     <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-bover table-inverse">
          <thead>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
            <th colspan="3"></th>
          </thead>
          <tbody>

             <% @books.each do |book| %>
             <tr>
               <td></td>
               <td><%= link_to book.title, "/books/#{book.id}" %></td>
               <td><%= book.body %></td>

             </tr>
             <% end %>
             </tbody>
        </table>
       </div>
      </div>
     </div>
    </main>

  </body>

</html>