<h2>User info</h2>
  <table class="table">
    <tbody>
      <tr>
        <th>
          <% if user.profile_image.attached? %>
           <%= image_tag user.profile_image, size: "100x100" %>
          <% else %>
           <%= image_tag 'default-image', size: "100x100" %>
          <% end %>
        </th>

      </tr>
      <tr>
	     <th>name</th>
	     <th><%= user.name %></th>
      </tr>
      <tr>
	     <th>introduction</th>
	     <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

<div class="row">
  <%= link_to "/users/#{user.id}/edit", class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog" aria-hidden="true"></i>
  <% end %>

</div>