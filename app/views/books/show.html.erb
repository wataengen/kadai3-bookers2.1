<!DOCTYPE html>
<html>
  <head>

  </head>
  <body>

    <main>


      <p id="notice"></p>
     <div class="container px-5 mx-sm-0">
      <div class="row">
        <div class="col-md-3">
         <h2>User info</h2>


          <%= render '/users/userinfo', user: @user %>
         <%= render 'newbook', book: @new_book %>
         </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-bover table-inverse">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          <tbody>

          <div>
             <th></th>
             <th><%= @book.title %></th>
             <th><%= @book.opinion %></th>
             <% if @book.user == current_user %>
             <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
             <td><%= link_to "Destroy", destroy_books_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>             </td>
             <% end %>

          </div>

          </tbody>
        </table>
       </div>
      </div>
    </div>


    </main>

  </body>

</html>
