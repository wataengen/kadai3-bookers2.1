<!DOCTYPE html>
<html>
  <head>

  </head>
  <body>

    <main>


      <p id="notice"></p>
     <div class="container px-5 mx-sm-0">
      <div class="row">
        <div class="col-md-3">

          <%= render '/users/userinfo', user: @user %>
         <%= render 'newbook', book: @new_book %>
         </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-bover table-inverse">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          <tbody>

          <tr>
             <th>

                 <% if @book.book_image.attached? %>
                  <%= link_to "/users/#{@book.user_id}" do %>
                   <%= image_tag (@book.book_image), size: "100x100" %><br>
                  <% end %>
                   <%= link_to @book.user.name, "/users/#{@book.user_id}" %>
                 <% else %>
                  <%= link_to "/users/#{@book.user_id}" do %>
                   <%= image_tag ('default-image'), size: "100x100" %><br>
                  <% end %>
                   <%= link_to @book.user.name, "/users/#{@book.user_id}" %>
                 <% end %>

             </th>
             <th><%= link_to @book.title, "/books/#{@book.id}" %></th>
             <th><%= @book.body %></th>
             <% if @book.user == current_user %>
             <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
             <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
             <% end %>

          </tr>

          </tbody>
        </table>
       </div>
      </div>
    </div>


    </main>

  </body>

</html>
