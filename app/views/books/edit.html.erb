<main>
  <p id="notice"></p>
   <div class="container">
    <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		<div>
  		  <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
     <% end %>
  		</div>

  		  <%= form_with model: @book, url: update_books_path(@book.id), method: :patch do |f| %>
