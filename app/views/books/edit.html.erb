        <div class="form-group">
         <label for="book_title">Title</label>
         <%= f.text_field :title %>
        </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :opinion %>

      </div>
      <div class="form-group">
       <%= f.submit "Update Book", class: "btn btn-success" %>

      </div>
  		<%= link_to "Show","/books/#{@book.id}" %> |
  		<%= link_to "Back", "/books" %>
  		<% end %>
     </div>
    </div>
   </div>
  </main>
